<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	
	<Frame name="PetEmote_MainFrame" parent="UIParent" hidden="false">
		<Scripts>
			<OnLoad> PetEmote_OnLoad(); </OnLoad>
			<OnEvent> PetEmote_OnEvent(self, event, ...); </OnEvent>
			<OnUpdate> PetEmote_OnUpdate(); </OnUpdate>
		</Scripts>
	</Frame>
	
	<Frame name="PetEmote_ControlFrame" parent="UIParent" toplevel="true" enableMouse="true" hidden="true">
		<Size>
			<AbsDimension x="212" y="270"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="CharacterFrame" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="-33" y="-28"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
			
				<FontString name="$parent_Title" inherits="GameFontNormal" text="PETEMOTE_CONTROLFRAME_TITLE">
					<Size>
						<AbsDimension x="0" y="12"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="17" y="-18"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parent_SubTitle" inherits="GameFontHighlightSmall" text="PETEMOTE_CONTROLFRAME_SUBTITLE">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_Title" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="0" y="-2"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parent_PetFamilyLabel" inherits="GameFontNormalSmall" text="PETEMOTE_CONTROLFRAME_PETFAMILY_COLON">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_SubTitle" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="0" y="-13"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
				<FontString name="$parent_PetGenderLabel" inherits="GameFontNormalSmall" text="PETEMOTE_CONTROLFRAME_PETGENDER_COLON">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_PetFamilyLabel" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="0" y="-8"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="$parent_DetailCorner" file="Interface\DialogFrame\UI-DialogBox-Corner">
					<Size>
						<AbsDimension x="32" y="32"/>
					</Size>
					<Anchors>
						<Anchor point="TOPRIGHT">
							<Offset>
								<AbsDimension x="-6" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="-3" y="-3"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<EditBox name="$parent_PetFamilyEditBox" autoFocus="false" letters="64">
				<Size>
					<AbsDimension x="150" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent_PetFamilyLabel" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="4" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						this:SetText(UnitCreatureFamily("pet"));
					</OnShow>
					<OnTextChanged>
					</OnTextChanged> 
					<OnEnterPressed>
						this:ClearFocus();
					</OnEnterPressed>
					<OnEscapePressed>
						this:ClearFocus();
					</OnEscapePressed>
				</Scripts>
				<FontString inherits="ChatFontNormal" bytes="64"/>
			</EditBox>
			<CheckButton name="$parent_RandomEmotesActive" inherits="OptionsCheckButtonTemplate">
				<Size x="24" y="24"/>
				<Anchors>
					<Anchor point="LEFT">
						<Offset>
							<AbsDimension x="3" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Frames>
					<Frame name="$parent_TooltipFrame" enableMouse="true" hidden="true">
						<Anchors>
							<Anchor point="TOPLEFT" relativeTo="AutoJoinBackground"/>
							<Anchor point="BOTTOMRIGHT" relativeTo="AutoJoinBackground"/>
						</Anchors>
						<Scripts>
							<OnEnter>
								GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
								GameTooltip:SetText(PETEMOTE_CONTROLFRAME_RANDOM_TOOLTIP, nil, nil, nil, nil, 1);
							</OnEnter>
							<OnLeave>
								GameTooltip:Hide();
							</OnLeave>
						</Scripts>
					</Frame>
				</Frames>
				<Scripts>
					<OnClick>
						if (this:GetChecked()) then
							PlaySound("igMainMenuOptionCheckBoxOn");
						else
							PlaySound("igMainMenuOptionCheckBoxOff");
						end
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT");
						GameTooltip:SetText(PETEMOTE_CONTROLFRAME_RANDOM_TOOLTIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
		</Frames>
		<Scripts>
			<OnShow>
				PetEmote_ControlFrame_SubTitle:SetText(PETEMOTE_CONTROLFRAME_SUBTITLE .. " " .. UnitName("pet"));
			</OnShow>
		</Scripts>
	</Frame>
	
</Ui>